{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "volumeMounts": [
      {
        "mountPath": "/app/database",
        "volumeName": "database"
      },
      {
        "mountPath": "/app/storage",
        "volumeName": "storage"
      }
    ]
  }
}
